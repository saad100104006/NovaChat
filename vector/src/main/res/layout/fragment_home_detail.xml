<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/top_layout"
    android:background="@color/black"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/roomListContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/bottomNavigationView"
        android:background="@color/black" />

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/groupToolbarAvatarImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/a11y_open_drawer"
            android:visibility="gone"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"

            android:backgroundTint="#009975"

            />

        <TextView
            android:id="@+id/groupToolbarTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?riotx_text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="@tools:sample/lorem/random" />

    </RelativeLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/groupToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="0dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/drawer"
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="600dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/black"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/homeDrawerHeaderAvatarView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                tools:src="@tools:sample/avatars" />

            <RelativeLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/img_settings"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:background="@drawable/ic_fab_add"
                    android:backgroundTint="#0ADCAB" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="18dp"
                    android:layout_toRightOf="@+id/img_settings"
                    android:text="Settings"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/sign"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:backgroundTint="#0ADCAB" />

                <TextView
                    android:id="@+id/sign_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="18dp"
                    android:layout_toRightOf="@+id/sign"
                    android:text="Sign Out"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <TextView
                android:id="@+id/homeDrawerUsernameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeDrawerHeaderAvatarView"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="@sample/matrix.json/data/displayName" />


            <TextView
                android:id="@+id/homeDrawerUserIdView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeDrawerUsernameView"
                android:layout_marginBottom="10dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="@sample/matrix.json/data/mxid" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/homeDrawerUserIdView"
                android:background="@color/riotx_header_panel_text_secondary_dark" />

            <ImageView
                android:id="@+id/options"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/options"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="22dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeKeysBackupBanner"

        android:background="@color/black"
        app:elevation="0dp"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/home_bottom_navigation" />

    <ImageView
        android:id="@+id/settings_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeKeysBackupBanner"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
      android:layout_marginTop="30dp"
        android:background="@drawable/ic_dots"

        />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottomNavigationView"
        android:weightSum="1"
        >

        <ImageView
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_weight=".18"
            android:layout_marginStart="11dp"

            android:layout_height="wrap_content"
            android:background="@drawable/ic_white_line"

            />

        <ImageView
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_weight=".21"
            android:layout_marginStart="11dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/one"
            android:background="@drawable/ic_white_line"
            />

    </LinearLayout>
    <im.vector.riotx.core.ui.views.KeysBackupBanner
        android:id="@+id/homeKeysBackupBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/syncStateView"
        android:background="?riotx_keys_backup_banner_accent_color"
        android:minHeight="67dp" />


    <im.vector.riotx.features.sync.widget.SyncStateView
        android:id="@+id/syncStateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top" />

</RelativeLayout>