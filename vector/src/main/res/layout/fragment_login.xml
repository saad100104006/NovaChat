<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logoImageView"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/circle"
                android:layout_gravity="center_horizontal" />


            <TextView
                android:id="@+id/riotx_no_registration_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="23dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Nova Chat"
                android:textColor="#000000"
                android:textSize="29sp" />


                <EditText
                    android:id="@+id/loginField"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:hint="Username"
                    android:paddingLeft="30dp"
                    android:textColorHint="#7D7C7C"
                    android:background="@drawable/button_rounded_corner"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/passwordContainer"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:hint="Password"
                    android:textColorHint="#7D7C7C"
                    android:paddingLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:background="@drawable/button_rounded_corner"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/passwordReveal"
                    android:layout_width="@dimen/layout_touch_size"
                    android:layout_height="@dimen/layout_touch_size"
                    android:layout_gravity="end"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:scaleType="center"
                    android:src="@drawable/ic_eye_black"
                    android:tint="?attr/colorAccent" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/VectorTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="16dp"
                android:hint="@string/settings_home_server">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/homeServerField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:background="@drawable/button_rounded_corner"
                    android:imeOptions="actionDone"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/authenticateButton"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/button_rounded_corner_green"
                android:text="@string/auth_login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp">

                <TextView
                    android:id="@+id/authenticateButtonSso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="or"
                    android:textColor="#7D7C7C"
                    android:textSize="20sp"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/authenticateButtonSso2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginLeft="5dp"
                    android:text="Click here"
                    android:textColor="#FF8970"
                    android:textSize="20sp"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/authenticateButtonSso3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginLeft="5dp"
                    android:text="to Create a New Account"
                    android:textColor="#7D7C7C"
                    android:textSize="20sp"
                    tools:visibility="visible" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/touchArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?vctr_waiting_background_color"
        android:clickable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>

